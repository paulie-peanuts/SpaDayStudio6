<h4>Sign up</h4>

<form action="/user" method="POST">
    <label>Username: <input type="text" name="username" value="@ViewBag.User?.Username"/></label><br />
    <label>Email: <input type="email" name="email" value="@ViewBag.User?.Email" /></label><br />
    <label>Password: <input type="password" name="password" /></label><br />
    <label>Verify: <input type="password" name="verify" /></label><br />
    <button type="submit">Submit</button>
    @if (ViewBag.Error != null)
    {
        <p>@ViewBag.Error</p>
    }
</form>